.hamburger {
  width: 30px;
  height: 24px;
  display: none;
  flex-direction: column;
  justify-content: space-between;

  @include tablets {
    display: inline-flex;
  }

  &:hover {
    .hamburger__plank {
      background-color: $links-hcolor;
    }
  }
}

.hamburger__plank {
  display: block;
  background-color: $text-color;
  height: 4PX;
}