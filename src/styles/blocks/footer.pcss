.footer {
  background: #252830;
  color: rgba(#fff, .45);
  padding: 74px 0;
  line-height: 1.8;

  @include tablets {
    padding: 64px 0;

    .menu__item {
      margin-right: 0;
    }

    .menu__list {
      justify-content: space-between;
    }
  }
}

.footer__container {
  display: flex;
  justify-content: space-between;

  @include desktop {
    justify-content: flex-start;
  }

  @include tablets {
    justify-content: space-between;
  }
}

.footer__copyright {
  display: flex;
  justify-content: space-between;
  color: $text-color;
  width: 26%;

  @include desktop {
    flex-direction: column;
    justify-content: flex-start;
  }

  @include tablets {
    width: 40%;
  }
}

.footer__date {
  font-size: 48px;
  font-weight: 600;
  white-space: nowrap;
  line-height: 1;

  @include desktop {
    margin-bottom: 14px;
  }
}

.footer__userinfo {
  width: 46%;

  @include desktop {
    width: 56%;
  }
}

.footer__name {
  font-size: 18px;
  font-weight: 700;
  color: #fff;
  text-transform: uppercase;
  margin-bottom: 18px;
}

.footer__data {
  width: 66%;

  @include tablets {
    padding-left: 3%;
  }
}

.footer__data-menu {
  margin-bottom: 50px;

  @include tablets {
    margin-bottom: 40px;

    .menu__item {
      justify-content: space-between;
    }
  }
}

.footer__data-content {
  display: flex;
  justify-content: space-between;

  @include tablets {
    flex-direction: column;
  }
}

.footer__data-col {
  width: 48%;

  @include tablets {
    width: 94%;
    margin-bottom: 56px;
  }
}

.footer__data-text {
  margin-bottom: 40px;

  @include desktop {
    margin-bottom: 30px;
  }

  @include tablets {
    margin-bottom: 26px;
  }
}