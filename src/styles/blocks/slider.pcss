.slider__header {
  display: flex;
  align-items: center;
  margin-bottom: 80px;
}

.slider__btn {
  margin-right: 28px;

  &:last-child {
    margin-right: 0;
  }
}

.slider__content {
  display: flex;
  padding-right: 26%;
  padding: 0 26% 0 5%;
}

.slider__item {
  width: 36%;
  margin: 0 120px 32px 0;

  &:last-child {
    margin-right: 0;
  }
}