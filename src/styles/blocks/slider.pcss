.slider__header {
  display: flex;
  align-items: center;
  margin-bottom: 76PX;

  @include tablets {
    margin-bottom: 50px;
  }

  @media (max-width: 550px) {
    flex-direction: column;
    justify-content: center;
  }

  @include phones {
    margin-bottom: 60px;
  }
}

.slider__btn {
  margin-right: 28px;

  @include tablets {
    margin-right: 34px;
  }

  &:last-child {
    margin-right: 0;
  }
}

.slider__content {
  display: flex;
  padding-right: 26%;
  padding: 0 23% 0 5%;
  overflow: hidden;

  @include desktop {
    padding: 0 0 0 7%;
  }

  @include tablets {
    padding-left: 4%;
  }


  @media (max-width: 550px) {
    flex-direction: column;
    align-items: center;
    padding-left: 0;
  }

  @include phones {
    flex-direction: row;
  }
}

.slider__item {
  flex-shrink: 0;
  width: 36%;
  margin-right: 120px;

  @include tablets {
    width: 50%;
    margin-right: 8%;
  }

  @media (max-width: 550px) {
    margin-right: 0;
    margin-bottom: 40px;
  }

  @include phones {
    width: 100%;
  }

  &:last-child {
    margin-right: 0;
  }
}