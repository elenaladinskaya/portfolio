.slider__content {
  display: flex;
  overflow: hidden;
}

.slider__item {
  flex-shrink: 0;
  width: 50%;
  padding-right: 30px;

  @include tablets {
    padding-right: 14px;
  }

  @media (max-width: 566px) {
    width: 100%;
    padding-right: 0;
    margin-bottom: 40px;
  }

  &:last-child {
    margin-right: 0;
  }
}