.slider__header {
  display: flex;
  align-items: center;
  margin-bottom: 76PX;

  @include tablets {
    margin-bottom: 50px;
  }

  @media (max-width: 566px) {
    flex-direction: column;
    justify-content: center;
  }

  @include phones {
    margin-bottom: 60px;
  }
}

.slider__btn {
  margin-right: 28px;

  @include tablets {
    margin-right: 34px;
  }

  &:last-child {
    margin-right: 0;
  }
}

