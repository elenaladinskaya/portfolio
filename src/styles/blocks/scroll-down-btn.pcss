.scroll-down-btn {
  font-size: 18px;

  &:after {
    content: svg-load('scroll.svg', fill=$text-color, width=100%, height=100%);
    display: inline-block;
    width: 14px;
    height: 14px;
    margin-left: 16px;
  }

  &:hover:after {
    content: svg-load('scroll.svg', fill=$links-hcolor, width=100%, height=100%);
  }
}