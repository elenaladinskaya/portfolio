.quote {
  // flex: 1;
  // display: flex;
  // flex-direction: column;
  padding-left: 20px;
  position: relative;

  &::before {
    content: svg-load("quote.svg", fill=#DDE3EC, width=100%, height=100%);
    display: block;
    width: 76px;
    height: auto;
    position: absolute;
    right: 100%;
  }
}

.quote__text {
  font-weight: 600;
  line-height: 1.8;
  color: rgba($text-color, .6);
  margin-bottom: 32px;
}

