.iconed-link {
  font-size: 18px;
  font-weight: 700;
  color: $links-color;
  text-decoration: none;
  transition: color .3s;

  &::before {
    content: svg-load('link.svg', fill=$links-color, width=100%, height=100%);
    width: 20px;
    height: 20px;
    display: inline-block;
    margin-right: 14px;
  }

  &:hover {
    color: #7287e6;

    &::before {
      content: svg-load('link.svg', fill=#7287e6, width=100%, height=100%);
    }
  }
}