.userinfo {
  text-align: center;
  line-height: 1.7;

  @include desktop {
    display: flex;
    justify-content: center;
    text-align: left;
  }

  &.disabled {
    display: none;
  }
}

.userinfo__title {
  font-size: 18px;
  font-weight: 600;
  color: rgba(70, 78, 98, 0.5);
  margin-bottom: 28px;

  @include desktop {
    text-align: right;
    margin-right: 34px;
  }
}

.userinfo__name {
  font-size: 72px;
  font-weight: 800;
  line-height: .8;
}