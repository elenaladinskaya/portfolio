.tags {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 36px;

  @include desktop {
    margin-bottom: 22px;
  }

  @include tablets {
    justify-content: center;
    margin-bottom: 28px;
  }

  @include phones {
    justify-content: flex-start;
    margin-bottom: 12px;
  }
}

.tags__item {
  margin: 0 8px 12px 0;

  @include tablets {
    margin: 0 12px 8px 0;
  }

  @include phones {
    margin-right: 8px;
    margin-bottom: 8px;
  }

  &:last-child {
    margin-right: 0;
  }
}