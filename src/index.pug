extends ./main.layout.pug

block content
  .welcome-section
    section.hero
      .container.hero__container 
        header.header
          a.logo(href="#") ЕЛ
          nav.menu 
            - const menuItems = ['Обо мне', 'Навыки', 'Работы', 'Отзывы'];
            ul.menu__list
              for item in menuItems 
                li.menu__item 
                  a(href="#").menu__link #{item} 

            - const socials = ['insta', 'vk', 'github', 'envelope'];
          ul.socials 
              for item in socials 
                li.socials__item 
                  a(href="#").socials__link   
                   +icon(item, "socials__icon")
        .userinfo 
            .userinfo__title Личный сайт#[br]веб разработчика
            h1.userinfo__name Елена#[br]Ладинская 

        .hero__bottom-btns 
            button.scroll-down-btn Скролл
    section.about
      .container.about__container
        .about__user 
          .user 
            .user__avatar 
              .user__avatar-style
                +image('content/user.jpg', 'user__avatar-pic')
            - 
              const userInfo = [
                ['Проживаю', 'Санкт-Петербург'],
                ['Возраст', '32 года'],
                ['Родилась', '12 марта 1989']
              ];
            table.user__data 
              for item in userInfo 
                tr.user__data-row 
                  td.user__data-title #{item[0]}
                  td.user__data-content #{item[1]}
        .about__content
          .about__desc Привет, меня зовут
          h2.about__title Елена Ладинская
          .about__text-info 
            p Я занимаюсь разработкой современных сайтов и приложений. #[br] Мне нравится делать интересные и современные проекты.
          .about__quote Этот сайт я сделала в рамках обучения в Школе онлайн образования LoftSchool. Чуть позже я освежу в нём свой контент. А пока посмотрите, как тут всё классно и красиво!
  .middle-section 
    section.values 
      .container 
        .values__title
          h2.values__title-text Чем я могу быть полезна вам
          .values__content 
            p Этот сайт я сделала в рамках обучения в Школе онлайн образования LoftSchool. Чуть позже я освежу в нём свой контент. А пока посмотрите, как тут всё классно и красиво!
        .values__widget 
          - 
            const skillsCat = [
              ['Front-end', ['HTML5', 'CSS3', 'Javascript', 'Jquery и Vue.js']],
              ['Workflow', ['GIT', 'Terminal', 'Gulp', 'Webpack']]
              ];
          ul.skills 
            each category in skillsCat 
              li.skills__item 
                .skills-row 
                  .skills-row__title #{category[0]}
                  ul.skills-row__list 
                    each skill in category[1] 
                      li.skills-row__item
                        .skill 
                          svg(viewBox="0 0 100 100").skill__circle-shape
                            circle(cx='50' cy='50' r='40').skill__circle.skill__circle--layer-under
                            circle(cx='50' cy='50' r='40' stroke='url(#gradient)' transform="rotate(180 50 50)").skill__circle.skill__circle--layer-above
                            linearGradient(id='gradient' x1='0%' y1='0%' x2='100%' y2='0%')
                              stop(offset='0%' stop-color='#7C00EA')            
                              stop(offset='100%' stop-color='#4A00ED') 
                          .skill__title #{skill}           