extends ./main.layout.pug

block content
  .welcome-section
    section.hero
      .container.hero__container 
        header.header
          a.logo(href="#") ЕЛ
          nav.menu.header__menu 
            - 
              const menuItems = [
              {name: 'Обо мне',
              href: '#about'},
              {name: 'Навыки',
              href: '#skills'},
              {name: 'Работы',
              href: '#works'},
              {name: 'Отзывы',
              href: '#reviews'}
              ];
            ul.menu__list
              for item in menuItems 
                li.menu__item 
                  a(href=item.href).menu__link #{item.name}

            - const socials = ['insta', 'vk', 'github', 'envelope'];
          ul.socials.header__socials 
              for item in socials 
                li.socials__item 
                  a(href="#", target="_blank").socials__link   
                   +icon(item, "socials__icon")
          a(href="#")#hamburger.hamburger
            span.hamburger__plank
            span.hamburger__plank
            span.hamburger__plank
        .userinfo 
            .userinfo__title Личный сайт#[br]веб-разработчика
            h1.userinfo__name Елена#[br]Ладинская 

        .hero__bottom-btns 
            button.scroll-down-btn Скролл
    section#about.about
      .container.about__container
        .about__wrap
          .about__user 
            .user 
              .user__avatar 
                .user__avatar-style
                  +image('content/user.jpg', 'user__avatar-pic')
              - 
                const userInfo = [
                  ['Проживаю', 'Санкт-Петербург'],
                  ['Возраст', '32 года'],
                  ['Родилась', '12 марта 1989']
                ];
              table.user__data 
                for item in userInfo 
                  tr.user__data-row 
                    td.user__data-title #{item[0]}
                    td.user__data-content #{item[1]}
          .about__content
            .about__desc Привет, меня зовут
            h2.about__title Елена Ладинская
            .about__text-info 
              p Я занимаюсь разработкой современных сайтов и приложений. Мне нравится делать интересные и современные проекты.
            .about__quote Этот сайт я сделала в рамках обучения в Школе онлайн образования LoftSchool. Чуть позже я освежу в нём свой контент. А пока посмотрите, как тут всё классно и красиво!
  .middle-section 
    .triangles.middle-section__triangles-top
      svg(viewBox='0 0 1000 100' preserveAspectRatio='none').triangles__shape.triangles__shape--position-left 
        polygon(points="0,0 0,100 1000,100")
      svg(viewBox='0 0 1000 100' preserveAspectRatio='none').triangles__shape.triangles__shape--position-right
        polygon(points="0,100 1000,100 1000,0")
    section#skills.values 
      .container.values__container 
        .values__title
          .values__title-container
            h3.values__title-text Чем я могу быть полезна вам
            .values__content 
              p Этот сайт я сделала в рамках обучения в Школе онлайн образования LoftSchool. Чуть позже я освежу в нём свой контент. А пока посмотрите, как тут всё классно и красиво!
        .values__widget
          .values__widget-container 
            #skills-component  
    section#works.works 
      .container.works__container 
        h2.section-title.works__section-title Мои работы
        .works__content
          #preview-component
    .triangles.middle-section__triangles-bottom.triangles--pointed-down
      svg(viewBox='0 0 1000 100' preserveAspectRatio='none').triangles__shape.triangles__shape--position-left 
        polygon(points="0,0 0,100 1000,100")
      svg(viewBox='0 0 1000 100' preserveAspectRatio='none').triangles__shape.triangles__shape--position-right
        polygon(points="0,100 1000,100 1000,0")
  section#reviews.reviews 
    .container.reviews__container 
      #slider-component 
  footer.footer
    .container.footer__container.container--footer 
      .footer__copyright
        .footer__date &copy; 2021
        .footer__userinfo
          .footer__name Елена Ладинская
          .footer__text Личный сайт веб-разработчика 
      .footer__data 
        nav.menu.menu--theme-light.footer__data-menu
          ul.menu__list
              for item in menuItems 
                li.menu__item 
                  a(href=item.href).menu__link #{item.name}
        .footer__data-content 
          .footer__data-col
            .footer__data-text
              p Этот сайт я сделала в рамках обучения в Школе онлайн образования Loftschool
            .footer__data-socials
              ul.socials.socials--roud-borders 
                for item in socials 
                  li.socials__item 
                    a(href="#", target="_blank").socials__link   
                      +icon(item, "socials__icon")
          .footer__data-col
            .text-quote 
              .text-quote__text 
                p Всегда пишите код так, будто сопровождать его будет склонный к насилию психопат, который знает где вы живете
              .text-quote__author Martin Golding

//- меню для мобильных устройств
block fullscreen 
  #mobile-menu.mobile-menu
    .mobile-menu__wrap
      a(href="#").mobile-menu__close
      .mobile-menu__container
        nav.menu.menu--vertical 
          ul.menu__list
            - 
              const mobileMenuItems = [
              { name: 'Главная',
              href: '#'},
              {name: 'Обо мне',
              href: '#about'},
              {name: 'Навыки',
              href: '#skills'},
              {name: 'Работы',
              href: '#works'},
              {name: 'Отзывы',
              href: '#reviews'}
              ];
            each item in mobileMenuItems
              li.menu__item 
                a(href=item.href).menu__link #{item.name} 
        ul.socials 
          each item in socials 
            li.socials__item 
              a(href="#", target="_blank").socials__link   
                +icon(item, "socials__icon")