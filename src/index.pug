extends ./main.layout.pug

block content
  .welcome-section
    section.hero
      .container.hero__container 
        header.header
          a.logo(href="#") ЕЛ
          nav.menu 
            - const menuItems = ['Обо мне', 'Навыки', 'Работы', 'Отзывы'];
            ul.menu__list
              for item in menuItems 
                li.menu__item 
                  a(href="#").menu__link #{item} 

            - const socials = ['insta', 'vk', 'github', 'envelope'];
          ul.socials 
              for item in socials 
                li.socials__item 
                  a(href="#").socials__link   
                   +icon(item, "socials__icon")
        .userinfo 
            .userinfo__title Личный сайт#[br]веб разработчика
            h1.userinfo__name Елена#[br]Ладинская 

        .hero__bottom-btns 
            button.scroll-down-btn Скролл
    section.about
      .container.about__container
        .about__user 
          .user 
            .user__avatar 
              .user__avatar-style
                +image('content/user.jpg', 'user__avatar-pic')
            - 
              const userInfo = [
                ['Проживаю', 'Санкт-Петербург'],
                ['Возраст', '32 года'],
                ['Родилась', '12 марта 1989']
              ];
            table.user__data 
              for item in userInfo 
                tr.user__data-row 
                  td.user__data-title #{item[0]}
                  td.user__data-content #{item[1]}
        .about__content
          .about__desc Привет, меня зовут
          h2.about__title Елена Ладинская
          .about__text-info 
            p Я занимаюсь разработкой современных сайтов и приложений. #[br] Мне нравится делать интересные и современные проекты.
          .about__quote Этот сайт я сделала в рамках обучения в Школе онлайн образования LoftSchool. Чуть позже я освежу в нём свой контент. А пока посмотрите, как тут всё классно и красиво!