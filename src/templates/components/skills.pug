script(type="text/x-template")#skills-list
  ul.skills 
    li.skills__item(v-for="cat in skills" :key="cat.id")
      skillsRow(
        :cat="cat"
      )                

script(type="text/x-template")#skills-row
  .skills-row 
    .skills-row__title {{cat.cat}}
    ul.skills-row__list
      li.skills-row__item(v-for="skill in cat.skills" :key="skill.id")
        skillsItem(
          :skill="skill"
        )

script(type="text/x-template")#skills-item
  .skill 
    svg(viewBox="0 0 100 100").skill__circle-shape
      circle(cx='50' cy='50' r='40').skill__circle.skill__circle--layer-under
      circle(cx='50' cy='50' r='40' ref="colored-circle" stroke='url(#gradient)' transform="rotate(180 50 50)").skill__circle.skill__circle--layer-above
      linearGradient(id='gradient' x1='0%' y1='0%' x2='100%' y2='0%')
        stop(offset='0%' stop-color='#7C00EA')            
        stop(offset='100%' stop-color='#4A00ED') 
    .skill__title {{skill.title}}